
<%= turbo_frame_tag "cart" do %>
  <h1>ОтпракиTrade</h1>
  <% if @cart.orderables.count > 0 %>
    <%= render "cart/orderables" %>
    <p>Всего за перевозки: <%= @cart.total %></p>
  <% else %>
    <p>Личный кабинет</p>
  <% end %>
<% end %>
<nav>
  <ul>
    <li><%= link_to 'Профиль', root_path %></li>
    <li><%= link_to 'Список заявок', cart_path %></li>
    <li><%= link_to 'Список задач', logistics_path %></li>
    <%= link_to 'Выйти', destroy_user_session_path, 'data-turbo-method': :delete %></li>
  </ul>
</nav>
